---
import SEO from "../components/SEO.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "TravelWithLove | Tu guía de viajes a Albania",
  description = "Descubre Albania con TravelWithLove. Playas, montañas, gastronomía y cultura. Planifica tu viaje perfecto con nuestras guías y consejos.",
} = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		
		<meta name="generator" content={Astro.generator} />
		<SEO title={title} description={description} />

		<!-- Google tag (gtag.js) -->
		<script async src="https://www.googletagmanager.com/gtag/js?id=G-17DVMY56N1"></script>
		<script is:inline>
		  window.dataLayer = window.dataLayer || [];
		  function gtag(){dataLayer.push(arguments);}
		  gtag('js', new Date());

		  gtag('config', 'G-17DVMY56N1');
		</script>
	</head>
	<body class="bg-linen-white text-slate-gray font-sans">
		<Header />
		<main>
			<slot />
		</main>
		<Footer />
	</body>
</html>