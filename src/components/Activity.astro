---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
  title: string;
  children: any;
  imageSrc: ImageMetadata;
  imageAlt: string;
  reverse?: boolean;
}

const {
  title,
  children,
  imageSrc,
  imageAlt,
  reverse = false,
} = Astro.props;
---

<div
  class:list={[
    "grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-12 items-center",
    { "md:[&>*:last-child]:-order-1": reverse },
  ]}
>
  <div class="w-full">
    <Image
      src={imageSrc}
      alt={imageAlt}
      class="w-full h-auto object-cover rounded-lg shadow-lg aspect-video"
      widths={[400, 800, 1200]}
      sizes="(max-width: 768px) 100vw, 50vw"
    />
  </div>
  <div class="w-full">
    <h3 class="text-3xl font-bold mb-4">
      {title}
    </h3>
    <div class="prose prose-lg max-w-none prose-invert">
      <slot />
    </div>
  </div>
</div>
